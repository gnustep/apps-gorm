version.texi: ../Version
	rm -f version.texi
	echo '@set GNUSTEP-VERSION' $(GNUSTEP_CORE_VERSION) \
		> version.texi
	echo '@set GNUSTEP-GCC $(GNUSTEP_GCC)' \
		>> version.texi
	echo '@set GORM-VERSION $(VERSION)' \
		>> version.texi

regenerate:
	mv ANNOUNCE README INSTALL NEWS ..
